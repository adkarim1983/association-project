# Database Configuration
MONGODB_URI=mongodb://localhost:27017/association_najm

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Internationalization
DEFAULT_LANGUAGE=fr

# JWT Authentication Configuration
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# JWT Access Token (short-lived, 15 minutes)
JWT_ACCESS_SECRET=your_super_secure_access_token_secret_here_64_chars_minimum
JWT_ACCESS_EXPIRE=15m

# JWT Refresh Token (long-lived, 7 days)
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_here_64_chars_minimum
JWT_REFRESH_EXPIRE=7d

# Email Configuration
# SMTP settings for sending emails (contact notifications, confirmations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=Association Najm <noreply@associationnajm.ma>
ADMIN_EMAIL=admin@associationnajm.ma

# File Upload Configuration (for future file uploads)
# MAX_FILE_SIZE=10485760
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
# UPLOAD_PATH=uploads/

# Redis Configuration (for future caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# Logging Configuration
# LOG_LEVEL=info
# LOG_FILE=logs/app.log
